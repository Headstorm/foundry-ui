{
  "compilerOptions": {
    "baseUrl": ".",
    "incremental": false,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "jsx": "react",
    "module": "commonjs",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "es5",
    "types": ["jest", "node"],
    "lib": ["es2017", "dom"]
  },
  "include": ["src/**/*", ".storybook/**/*"],
  "exclude": ["node_modules", "build", "scripts"]
}